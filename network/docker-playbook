---
- name: Install Docker, Docker Compose, and run compose from GitHub
  hosts: all
  become: yes
  vars:
    docker_packages:
      - docker.io
      - docker-compose-plugin
    repo_url: "https://github.com/pantabury/semaphore-video.git"
    repo_dest: "/opt/my-docker-app"

  tasks:
    - name: Ensure apt cache is updated
      apt:
        update_cache: yes
      when: ansible_os_family == "Debian"

    - name: Install Docker and Compose plugin
      apt:
        name: "{{ docker_packages }}"
        state: present
      when: ansible_os_family == "Debian"

    - name: Ensure docker service is running
      service:
        name: docker
        state: started
        enabled: yes

    - name: Install Git
      apt:
        name: git
        state: present
      when: ansible_os_family == "Debian"

    - name: Clone or update repo
      git:
        repo: "{{ repo_url }}"
        dest: "{{ repo_dest }}"
        version: main
        update: yes

    - name: Run docker compose up
      community.docker.docker_compose_v2:
        project_src: "{{ repo_dest }}"
        state: present
